{
  "compilerOptions": {
    "strict": true,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "types": [
      "vite/client",
      "vite-plugin-solid-svg/types",
      "@testing-library/jest-dom",
      "vite-plugin-pwa/client"
    ],
    "noEmit": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@test": ["test"],
      "@revolt/app": ["components/app"],
      "@revolt/app/*": ["components/app/*"],
      "@revolt/auth": ["components/auth"],
      "@revolt/auth/*": ["components/auth/*"],
      "@revolt/client": ["components/client"],
      "@revolt/client/*": ["components/client/*"],
      "@revolt/common": ["components/common"],
      "@revolt/common/*": ["components/common/*"],
      "@revolt/i18n": ["components/i18n"],
      "@revolt/i18n/*": ["components/i18n/*"],
      "@revolt/keybinds": ["components/keybinds"],
      "@revolt/keybinds/*": ["components/keybinds/*"],
      "@revolt/markdown": ["components/markdown"],
      "@revolt/markdown/*": ["components/markdown/*"],
      "@revolt/modal": ["components/modal"],
      "@revolt/modal/*": ["components/modal/*"],
      "@revolt/routing": ["components/routing"],
      "@revolt/routing/*": ["components/routing/*"],
      "@revolt/rtc": ["components/rtc"],
      "@revolt/rtc/*": ["components/rtc/*"],
      "@revolt/state": ["components/state"],
      "@revolt/state/*": ["components/state/*"],
      "@revolt/ui": ["components/ui"],
      "@revolt/ui/*": ["components/ui/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "test/**/*.ts",
    "test/**/*.tsx",
    "components/**/*.ts",
    "components/**/*.tsx",
    "types/*.d.ts"
  ],
  "exclude": ["components/i18n/locales/*"]
}
